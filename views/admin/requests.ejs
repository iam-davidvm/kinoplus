<% layout('layouts/boilerplate') %>


<h1 class="title mt-3 mb-6">Requests</h1>

<% if(!cinemas.length) { %>
    <div class="notification">
        There are no requests at the moment.
      </div>
<% } else { %>

<table class="table is-fullwidth is-striped">
    <thead>
        <tr>
            <th>Cinema name</th>
            <th>Location</th>
            <th>Owner</th>
            <th>User</th>
            <th class="is-narrow">View</th>
            <th class="is-narrow">Reject</th>
        </tr>
    </thead>
    <tbody>
        <% for(let cinema of cinemas) { %>

                <tr>
                    <td><%= cinema.name %></td>
                    <td><%= cinema.location %></td>
                    <td><%= cinema.owner %></td>
                    <td><%= cinema.admin.username %></td>
                    <td class="is-narrow">
                        <a href="/admin/requests/<%= cinema._id %>" class="button">
                            <span class="icon">
                                <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" />
                                </svg>
                            </span>
                        </a>
                    </td>
                    <td class="is-narrow">
                        <a href="/admin/requests/<%= cinema._id %>/delete" class="button is-danger">
                            <span class="icon">
                                <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                                    <path fill="#fff" d="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" />
                                </svg>
                            </span>
                        </a>
                    </td>
                </tr>
        <% } %>
    </tbody>
</table>
<% } %>