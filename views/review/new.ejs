<% layout('layouts/boilerplate') %>

<h1 class="title mt-3 mb-6">Add Your review</h1>

<form id="form" action="/kino/<%= id %>/review" method="POST">
  <div class="field">
    <label class="label" for="body">Review</label>
    <div class="control">
      <textarea id="body" name="review[body]" class="textarea counter-box" placeholder="What are your thoughts about this cinema?" required></textarea>
    </div>
  </div>
  
    <div class="field">
        <label class="label" for="rating">Rating</label>
        <output class="slider-output mb-1" for="rating">3</output>
        <input id="rating" name="review[rating]" class="slider" min="1" max="5" value="3" step="1" type="range">
    </div>
    
    <div class="control mt-6">
        <button class="button is-primary">Submit</button>
      </div>
  </form>
