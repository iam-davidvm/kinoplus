<% layout('layouts/boilerplate') %>

<div class="notification is-danger">
    <div class="content">
        <h1 class="title is-6">Oops, something went wrong</h1>
        <p>
            <%= err.message %>
        </p>
        <p>
            <% if (process.env.NODE_ENV !== 'production') { %>
                <%= err.stack %>
            <% } %>
        </p>
    </div>
  </div>

  <a href="/" class="button is-primary">Return to homepage</a>